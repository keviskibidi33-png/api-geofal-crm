# Conexión a PostgreSQL compartida con Directus
QUOTES_DATABASE_URL=postgresql://directus:directus@postgres:5432/directus

# Variables individuales (alternativa a DATABASE_URL)
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=directus
DB_USER=directus
DB_PASSWORD=directus

# CORS - orígenes permitidos
QUOTES_CORS_ORIGINS=*

# Supabase Storage (para archivos de cotizaciones y reportes)
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key

# Supabase JWT Secret (para validar tokens de autenticación)
# Encuéntralo en: Supabase Dashboard → Settings → API → JWT Settings → JWT Secret
# Si no se configura, el backend permite todas las requests (modo desarrollo)
SUPABASE_JWT_SECRET=tu-jwt-secret

# Solo para desarrollo local (NUNCA en producción)
# Si es true y falta SUPABASE_JWT_SECRET, se desactiva validación JWT
ALLOW_INSECURE_DEV_AUTH=false

# Supabase JWT Secret (para validar tokens de autenticación)
# Obtener de: Supabase Dashboard → Settings → API → JWT Secret
SUPABASE_JWT_SECRET=tu-jwt-secret

# Directus (para autenticación y perfiles de usuario)
DIRECTUS_URL=https://crm.tu-dominio.com
